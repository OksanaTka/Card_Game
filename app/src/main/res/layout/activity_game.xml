<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:background="@color/background_game"
    android:orientation="vertical"
    tools:context=".activity.GameActivity">

    <ProgressBar
        android:id="@+id/game_SB_statusBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="200dp"
        android:layout_marginRight="200dp"
        android:layout_centerHorizontal="true"
        android:progress="1"
        android:max="26"
        android:progressDrawable="@drawable/progress_bar"

        />

    <LinearLayout
        android:id="@+id/dyn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/game_LBL_score1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:text="0"
                android:textSize="50dp"
                android:textStyle="bold"
                />
            <ImageView
                android:id="@+id/game_IMG_player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:background="@color/no_background"
                android:src="@drawable/player_1" />
            <TextView
                android:id="@+id/game_LBL_player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="player 1" />

        </LinearLayout>

        <ImageView
            android:id="@+id/game_IMG_card1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_gravity="left"
            android:layout_weight="3.5"
            android:background="@color/no_background"
            android:src="@drawable/poker_back" />

        <ImageView
            android:id="@+id/game_IMG_card2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_gravity="right"
            android:layout_weight="3.5"
            android:background="@color/no_background"
            android:src="@drawable/poker_back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/game_LBL_score2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:text="0"
                android:textSize="50dp"
                android:textStyle="bold"
                />
            <ImageView
                android:id="@+id/game_BTN_player2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:background="@color/no_background"
                android:src="@drawable/player_2" />
            <TextView
                android:id="@+id/game_LBL_player2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="50dp"
                android:textSize="25dp"
                android:textStyle="bold"
                android:text="player 2" />

        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/game_IBTN_play"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@color/no_background"
        android:src="@drawable/play2"
        />

</RelativeLayout>